Algoritmo "condicoes"

Var
n1:inteiro
result: inteiro
Inicio

      escreval("digite um número para saber se é impar ou par")
      leia (n1)
      result:= n1 mod 2

      se (result) = 0 entao
      escreval ("é par")
      senao
      escreval ("é impar")
      
fimse

Fimalgoritmo